<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- 顶部Tab图标 -->
    <ImageView
        android:id="@+id/ivSpaceStations"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/space_station_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/ivFlights"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintTop_toTopOf="@id/ivSpaceStations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="2dp" />

    <ImageView
        android:id="@+id/ivRovers"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rover_icon"
        app:layout_constraintTop_toTopOf="@id/ivSpaceStations"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp" />


    <!-- DCA + 双向箭头 + MARS 区域 -->
    <TextView
        android:id="@+id/tvDCA"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#2E7D32"
        android:text="DCA"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSpaceStations"
        app:layout_constraintEnd_toStartOf="@+id/ivDoubleArrows"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp" />

    <ImageView
        android:id="@+id/ivDoubleArrows"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/double_arrows"
        app:layout_constraintStart_toEndOf="@id/tvDCA"
        app:layout_constraintTop_toTopOf="@id/tvDCA"
        app:layout_constraintEnd_toStartOf="@+id/tvMars" />

    <TextView
        android:id="@+id/tvMars"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#2E7D32"
        android:text="MARS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivDoubleArrows"
        app:layout_constraintTop_toTopOf="@id/tvDCA"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp" />


    <!-- One Way + 开关 区域 -->
    <TextView
        android:id="@+id/tvOneWay"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="One Way"
        android:textColor="@android:color/white"
        android:background="#D84315"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvDCA"
        app:layout_constraintTop_toBottomOf="@id/tvDCA"
        android:layout_marginTop="12dp" />

    <Switch
        android:id="@+id/switchOneWay"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvOneWay"
        app:layout_constraintTop_toTopOf="@id/tvOneWay"
        app:layout_constraintBottom_toBottomOf="@id/tvOneWay" />


    <!-- 1 Traveller 区域 -->
    <TextView
        android:id="@+id/tvTraveller"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="1 Traveller"
        android:textColor="@android:color/white"
        android:background="#D84315"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvOneWay"
        app:layout_constraintTop_toBottomOf="@id/tvOneWay"
        android:layout_marginTop="8dp" />


    <!-- 火箭+星球（居中） -->
    <ImageView
        android:id="@+id/ivRocket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/rocket_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTraveller"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/ivSpaceStationBottom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/galaxy"
        app:layout_constraintStart_toEndOf="@id/ivRocket"
        app:layout_constraintTop_toTopOf="@id/ivRocket"
        android:layout_marginStart="8dp" />


    <!-- DEPART按钮（底部） -->
    <Button
        android:id="@+id/btnDepart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="DEPART"
        android:textColor="@android:color/white"
        android:background="#7B1FA2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>